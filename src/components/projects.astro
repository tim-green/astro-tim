---
import { Image } from "astro:assets";

// project images import
import polygon from "../../public/polygon.jpg";
import slash from "../../public/slash.jpg";
import craft from "../../public/craft.jpg";
import harlow from "../../public/harlow.jpg";
import letterbox from "../../public/letterbox.jpg";


interface Project {
  title: string;
  image: ImageMetadata;
  description: string;
  git: string;
  link: string;
}

const projects: Project[] = [
    {
    title: "Polygon",
    image: polygon as ImageMetadata,
    description:"Polygon is an ultra-minimal site built using Astro.",
    git: "https://github.com/tim-green/astro-polygon",
    link: "https://astro.timgreen.ws/polygon/"
  },
  {
    title: "Slash",
    image: slash as ImageMetadata,
    description:"Slash is a simple and flexible link-in-bio for developers, creators or anything else.",
    git: "https://github.com/tim-green/astro-slash",
    link: "https://astro.timgreen.ws/slash/",
  },
  {
    title: "Craft",
    image: craft as ImageMetadata,
    description:"Craft is a simple image gallery application with a lightbox feature, built using Astro. It provides a minimalistic and efficient way to showcase images with an elegant lightbox effect for better user experience.",
    git: "https://github.com/tim-green/astro-craft",
    link: "https://astro.timgreen.ws/craft/",
  },
  {
    title: "Harlow",
    image: harlow as ImageMetadata,
    description:"Landing page, designed for real estate development. But also be modded for anything.",
    git: "https://github.com/tim-green/astro-harlow",
    link: "https://astro.timgreen.ws/harlow/",
  },
  {
    title: "Letterbox",
    image: letterbox as ImageMetadata,
    description:"Astro build landing page, designed for SaaS.",
    git: "https://github.com/tim-green/astro-letterbox",
    link: "https://astro.timgreen.ws/letterbox/"
  }
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="mv text-4xl md:text-5xl font-medium mb-8">Projects</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group">
            <a
              href={project.link}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 md:h-72 object-cover group-hover:scale-105 transition-transform duration-300"
                />
                
              </div>
              <div class="flex items-center px-3">
                <div class="flex-grow">
                  <h4 class="text-2xl font-semibold">{project.title}</h4>
                  <div class="flex-1">
                    <p class="text-gray-400 flex-1">{project.description}</p>
                  </div>
                </div>
                <div class="flex gap-2 ml-auto">
                  <a
                    target="_blank"
                    href={project.git}
                    aria-label="GitHub"
                    class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-[var(--green-icon)] transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                   <svg fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                  </a>
                  <a
                    target="_blank"
                    href={project.link}
                    aria-label="link"
                    class="size-12 flex justify-center items-center text-[var(--white-icon)] hover:text-[var(--green-icon)] transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
                    >
                      <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                    </svg>
                  </a>
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
    <a
      target="_blank"
      href="https://github.com/tim-green?tab=repositories"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)] hover:scale-105 hidden"
    >
      <span class="md:text-lg text-md">More other projects on</span>
      <svg fill="none" height="24" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
    </a>
  </div>
</section>
